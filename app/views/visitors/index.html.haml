.section.bg-1
  .container#jumbo-tron
    .row
      .header
        %ul.list-inline.pull-right#login-reg-actions
          %li#login= link_to 'Sign in', new_user_session_path
          %li#register= link_to raw("<div class='btn btn-hollow'>Register</div>"), new_user_registration_path
      .col-md-4.col-md-offset-4.summoner-name-form-holder
        %h1#logo-holder
          =image_tag("smnr_logo.gif", size: "275x41", alt: "SMNR.gg", id: "logo")
          =image_tag("smnr_logo_inverse.gif", size: "275x41", alt: "SMNR.gg", id: "logo-inverse")
        
        = form_tag summoner_create_path, remote: true, id: "summoner-name-form", method: 'POST' do
          = text_field_tag :name, params[:name], placeholder: "Enter your summoner name...", autocomplete: :off
        
        #summoner-name-progress-holder
          .progress
            .progress-bar.progress-bar-default.progress-bar-striped.active{:role => "progressbar", :'aria-valuenow' => "100", :'aria-valuemin' => "0", :'aria-valuemax'=>"100", :style=>"width:100%"}
          .loading-holder
            %i.fa.fa-spinner.fa-spin
            %span#loading-text Retreiving Summoner ID